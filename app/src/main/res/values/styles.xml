<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="SettingDivider">
        <item name="android:background">@color/setting_divider</item>
        <item name="android:layout_height">@dimen/setting_divider</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="HeadDivider" parent="SettingDivider">
        <item name="android:layout_marginLeft">56dp</item>
    </style>

    <style name="SettingBigDivider">
        <item name="android:background">@color/setting_big_divider</item>
        <item name="android:layout_height">@dimen/setting_big_divider</item>
        <item name="android:layout_width">match_parent</item>
    </style>


    <style name="transText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#0000</item>
    </style>

    <style name="TextAppearance_TitleBar_Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/colorTitle</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="TextAppearance_TitleBar_subTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <!-- 左右文字样式 （和toolbar副标题样式一样，可自行修改）-->
    </style>

    <style name="TwoTextMain">
        <item name="android:textSize">@dimen/item_two_txt_main_16sp</item>
        <item name="android:textColor">@color/Text</item>
    </style>

    <style name="TwoTextSecond">
        <item name="android:textSize">@dimen/item_two_txt_second_14sp</item>
        <item name="android:textColor">@color/TextGray</item>
    </style>

    <style name="TwoTextLinear">
        <item name="android:layout_marginLeft">@dimen/item_head_two_txt_margin_left_8dp</item>
    </style>

    <style name="TextPress" parent="TwoTextMain">
        <item name="android:gravity">center</item>
    </style>

    <style name="TextPressAttention">
        <item name="android:textSize">@dimen/item_two_txt_main_16sp</item>
        <item name="android:textColor">@color/textPressAttention</item>
        <item name="android:gravity">center</item>
    </style>

    <declare-styleable name="GuaGuaKa">
        <attr name="Reward_Text" format="string" />
        <attr name="Reward_Text_Color" format="color" />
        <attr name="Reward_Text_Size" format="dimension" />
        <attr name="Reward_Eraser_Size" format="dimension" />
        <attr name="Reward_Resource" format="reference" />
    </declare-styleable>
</resources>
