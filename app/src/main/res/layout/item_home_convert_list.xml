<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginLeft="16dp"
    android:layout_marginTop="16dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/convert_post_user_head_iv"
        android:layout_width="@dimen/item_head"
        android:layout_height="@dimen/item_head"
        android:src="@mipmap/ico_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/convert_post_user_name_tv"
                style="@style/TwoTextMain"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="16dp"
                tools:text="鹏君" />

            <TextView
                android:id="@+id/convert_post_user_date_tv"
                style="@style/ThreeTextThird"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:gravity="right|center_vertical"
                tools:text="2017.1.1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/convert_post_user_title_tv"
                style="@style/ThreeTextSecond"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:maxLines="1"
                tools:text="谱名" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="right|center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    app:srcCompat="@drawable/ic_vec_convert_coin" />

                <TextView
                    android:id="@+id/convert_post_user_coin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    tools:text="0" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    app:srcCompat="@drawable/ic_vec_comment" />

                <TextView
                    android:id="@+id/convert_post_user_comment_num_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/convert_post_user_content_tv"
            style="@style/TwoTextSecond"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:maxLines="1"
            tools:text="内容" />

    </LinearLayout>
</LinearLayout>






