<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/item_padding_16dp"
    android:paddingLeft="16dp"
    android:paddingRight="@dimen/item_padding_16dp">

    <ImageView
        android:id="@+id/head_iv"
        android:layout_width="@dimen/item_head"
        android:layout_height="@dimen/item_head"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:id="@+id/content_ll"
        style="@style/TwoTextLinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name_tv"
            style="@style/TwoTextMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="化身孤岛的鲸" />

        <TextView
            android:id="@+id/content_tv"
            style="@style/TwoTextSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="描述" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                app:srcCompat="@drawable/ic_vec_download_num"
                android:id="@+id/download_num_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="8dp"
                tools:text="1"
                android:id="@+id/download_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/ic_vec_agree_num"
                android:id="@+id/agree_num_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="8dp"
                tools:text="2"
                android:id="@+id/agree_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/ic_vec_collection_num"
                android:id="@+id/collection_num_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="8dp"
                tools:text="2"
                android:id="@+id/collection_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <View
            style="@style/SettingDivider"
            android:layout_marginTop="8dp" />
    </LinearLayout>


</LinearLayout>


