<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/include_appbar_toolbar" />

   <include layout="@layout/include_top_logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.example.q.pocketmusic.view.widget.view.TextEdit
            android:id="@+id/account_tet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIcoResource="@drawable/ico_email"
            app:itemInputHint="请输入邮箱/Email" />

        <com.example.q.pocketmusic.view.widget.view.TextEdit
            android:id="@+id/password_tet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemIcoResource="@drawable/ico_password"
            app:itemInputHint="请输入密码/Password"
            app:itemInputPassword="true" />


        <TextView
            android:id="@+id/ok_txt"
            style="@style/TextPress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/bg_text_press"
            android:text="确定" />


        <TextView
            android:id="@+id/register_txt"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="去注册>>" />
    </LinearLayout>


</LinearLayout>