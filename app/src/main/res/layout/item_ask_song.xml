<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/item_padding_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_user_head_iv"
            android:layout_width="@dimen/item_head"
            android:layout_height="@dimen/item_head"
            android:src="@mipmap/ico_launcher" />

        <LinearLayout
            style="@style/TwoTextLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/post_user_name_tv"
                style="@style/TwoTextMain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="鹏君" />

            <TextView
                android:id="@+id/post_user_date_tv"
                style="@style/TwoTextSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="2017.1.1" />
        </LinearLayout>

    </LinearLayout>


    <TextView
        android:id="@+id/post_user_title_tv"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        tools:text="求谱啊啊~~~~" />

    <TextView
        android:id="@+id/post_user_type_tv"
        style="@style/TextAppearance.AppCompat.Caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="曲谱类型" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/post_user_content_tv"
            style="@style/TextAppearance.AppCompat.Caption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="求谱详细内容" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:srcCompat="@drawable/ic_vec_comment" />

        <TextView
            android:id="@+id/post_user_comment_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="0" />
    </LinearLayout>


</LinearLayout>