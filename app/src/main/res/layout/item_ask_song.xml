<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/item_padding_16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/post_user_head_iv"
            android:layout_width="@dimen/item_head"
            android:layout_height="@dimen/item_head"
            android:src="@mipmap/ico_launcher" />

        <LinearLayout
            style="@style/TwoTextLinear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/post_user_date_tv"
                    style="@style/ThreeTextThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    tools:text="2017.1.1" />

                <TextView
                    android:id="@+id/post_user_name_tv"
                    style="@style/TwoTextMain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="鹏君" />
            </RelativeLayout>


            <TextView
                android:id="@+id/post_user_title_tv"
                style="@style/ThreeTextSecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                tools:text="求谱啊啊~~~~" />

            <TextView
                android:id="@+id/post_user_content_tv"
                style="@style/ThreeTextSecond"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="求谱详细内容" />


        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/post_user_type_tv"
            style="@style/ThreeTextThird"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="56dp"
            tools:text="曲谱类型" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="56dp"
            app:srcCompat="@drawable/ic_vec_hot" />

        <TextView
            android:id="@+id/post_user_hot_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            tools:text="0" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            app:srcCompat="@drawable/ic_vec_comment" />

        <TextView
            android:id="@+id/post_user_comment_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            tools:text="0" />

    </RelativeLayout>


</LinearLayout>